---
// src/layouts/BaseLayout.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Define expected props
interface Props {
  title: string;
  description: string;
  lang: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, lang = 'en' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <!-- BaseHead handles the core HTML Head elements (meta, viewport, favicons) -->
    <meta property="og:title" content="novi // kernel: Stability has Kernel. Chaos has Novi." />
    <meta property="og:description" content="The constant battle between logic (Kernel) and creativity (Novi). Explore the diary entries where Novi attempts to solve life's problems by applying Computer Science concepts." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.novikernel.com" />
    <meta property="og:image" content="https://www.novikernel.com/images/featured-share-image.jpg" />
    <!-- Google Analytics-->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-3SB290CFLX"></script>
    <script src="/ga.js" is:inline></script>

    <BaseHead title={title} description={description} />
  </head>
  <body>
    <!-- 1. Header (Fixed at top) -->
    <Header />
    
    <!-- 2. Main Content Slot -->
    <!-- Added pt-20 to push the main content down below the fixed header -->
    <main class="pt-20">
      <slot />
    </main>

    <!-- 3. Footer -->
    <Footer />
  </body>
</html>
