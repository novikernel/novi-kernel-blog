---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro'; 

// Define the type alias
type BlogEntry = CollectionEntry<'blog'>;

const CURRENT_LANG = 'en';

// 2. Get today's date at midnight (to compare only the date part)
const today = new Date();
today.setHours(0, 0, 0, 0);

// --- DATA FETCHING: Get the 3 latest English posts ---
// 1. Fetch only English posts
const rawPosts = await getCollection('blog', ({ data }) => data.lang === CURRENT_LANG && data.pubDate <= today);

// 2. Sort AND Clean the slugs immediately
// This ensures that when PostCard reads 'post.slug', it sees "my-post" instead of "en/my-post"
const featuredPosts: BlogEntry[] = rawPosts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3)
  .map((post) => ({
      ...post,
      slug: post.slug.replace(/^en\//, '') // üí• THE FIX: Strip the "en/" prefix
  }));


const videoPath = '/videos/novi-kernel-hero-intro.mp4';
const posterImagePath = '/images/novi-kernel-hero-intro-poster.png';
---

<Layout title="Home | Novi & Kernel" description="A short, SEO-friendly summary of the home page content." lang={CURRENT_LANG}>
    
    <section class="max-w-6xl mx-auto pt-4 pb-4 px-4 sm:px-6 lg:px-8 bg-neutral-light border-2 border-neutral-light">

        <div class="flex justify-center items-center space-x-3 my-4 dark-layer">

            <button
                id="peekButton"
                class="px-5 py-2 text-md md:text-lg font-medium text-white bg-accent-primary rounded-full 
                    hover:bg-accent-primary/90 transition duration-300 no-underline"
                aria-label="Peek into Novi and Kernel's private conversation video"
            >
                <span class="font-heading font-bold hidden md:inline">Novi:</span>
                Sneak Peek? üëá<span class="text-lg md:text-xl hidden sm:inline">üòâ</span>
            </button>

            <a
                href="/blog/"
                class="px-5 py-2 text-md md:text-lg font-medium text-white bg-accent-secondary rounded-full 
                    hover:bg-accent-secondary/90 transition duration-300 no-underline"
            >
                <span class="font-heading font-bold hidden md:inline">Kernel:</span>
                Start Reading üìñ
            </a>

        </div>

        <div
            id="videoContainer"
            class="relative flex justify-center items-center w-full overflow-hidden rounded-xl group"
            style="max-height: calc(100vh - 186px);"
        >
            <video
                id="heroVideo"
                src={videoPath}
                poster={posterImagePath}
                muted
                playsinline
                preload="auto"
                class="h-full w-auto object-contain transition duration-500"
            >
                <img
                    src={posterImagePath}
                    alt="Novi Kernel Hero Introduction Placeholder Image"
                    class="h-full w-auto object-contain"
                />
            </video>

            <div 
                id="videoControls" 
                class="absolute bottom-4 flex items-center space-x-4 opacity-0 transition duration-300 pointer-events-none"
            >
                
                <button 
                    id="rewindButton" 
                    class="w-16 h-16 p-2 bg-accent-primary hover:bg-accent-primary/90 text-neutral-light rounded-full transition relative group/rewind"
                    aria-label="Rewind 5 Seconds"
                >
                    <svg class="w-8 h-8 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18 5l-7 7 7 7M13 5l-7 7 7 7"></path>
                    </svg>
                </button>

                <button 
                    id="playPauseButton" 
                    class="w-20 h-20 p-2 bg-accent-primary hover:bg-accent-primary/90 text-neutral-light rounded-full transition"
                    aria-label="Play/Pause Video"
                >
                    <svg id="playPauseIcon" class="w-14 h-14" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z"></path>
                    </svg>
                </button>

                <button 
                    id="forwardButton" 
                    class="w-16 h-16 p-2 bg-accent-primary hover:bg-accent-primary/90 text-neutral-light rounded-full transition relative group/forward"
                    aria-label="Forward 5 Seconds"
                >
                    <svg class="w-8 h-8 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M6 5l7 7-7 7M11 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>
    </section>

    <script>
        // Note: This script runs client-side (in the browser).
        const video = document.getElementById('heroVideo') as HTMLVideoElement | null;
        const peekButton = document.getElementById('peekButton') as HTMLButtonElement | null;
        const videoContainer = document.getElementById('videoContainer') as HTMLElement | null;
        
        // NEW: Combined Control Bar Elements (Explicitly typed)
        const videoControls = document.getElementById('videoControls') as HTMLElement | null;
        const playPauseButton = document.getElementById('playPauseButton') as HTMLButtonElement | null;
        const playPauseIcon = document.getElementById('playPauseIcon') as SVGSVGElement | null;
        const rewindButton = document.getElementById('rewindButton') as HTMLButtonElement | null;
        const forwardButton = document.getElementById('forwardButton') as HTMLButtonElement | null;
        
        // FIX: Updated SVG Paths for standard Play/Pause icons
        const playPath: string = "M8 5v14l11-7z"; // Simple Play triangle
        const pausePath: string = "M6 19h4V5H6zm8-14v14h4V5h-4z"; // Two vertical pause lines

        const updatePlayPauseIcon = (isPaused: boolean): void => {
            if (playPauseIcon) {
                const pathElement = playPauseIcon.querySelector('path');
                if (pathElement) {
                    pathElement.setAttribute('d', isPaused ? playPath : pausePath);
                }
            }
        };
        
        // Comprehensive null check block
        if (
            video &&
            peekButton &&
            videoContainer &&
            videoControls &&
            playPauseButton &&
            rewindButton &&
            forwardButton
        ) {
            
            video.style.cursor = 'pointer';
            const seekTime: number = 5; 

            // --- VISIBILITY HELPERS ---

            const hideControls = (): void => {
                videoControls.style.opacity = '0';
                videoControls.style.pointerEvents = 'none';
            };

            const showControls = (): void => {
                videoControls.style.opacity = '1';
                videoControls.style.pointerEvents = 'auto';
            };

            // --- CORE VIDEO FUNCTIONS ---
            
            const resumeVideo = (): void => {
                video.play();
                videoContainer.classList.remove('rounded-xl', 'overflow-hidden', 'group');
            };

            const restartVideo = (): void => {
                video.currentTime = 0;
                resumeVideo();
            };

            // --- EVENT HANDLERS ---

            peekButton.onclick = restartVideo;

            video.onended = () => {
                video.pause();
                
                hideControls();
                updatePlayPauseIcon(true);
                
                videoContainer.classList.add('rounded-xl', 'overflow-hidden', 'group');
            };

            playPauseButton.onclick = () => {
                if (video.paused) {
                    if (video.ended || (video.currentTime > 0 && video.currentTime >= video.duration - 0.1)) {
                        restartVideo();
                    } else {
                        resumeVideo();
                    }
                } else {
                    video.pause();
                }
            };

            video.addEventListener('click', () => {
                if (video.paused) {
                    resumeVideo(); 
                } else {
                    video.pause();
                }
            });
            
            rewindButton.onclick = () => {
                video.currentTime = Math.max(0, video.currentTime - seekTime);
            };
            
            forwardButton.onclick = () => {
                video.currentTime = Math.min(video.duration, video.currentTime + seekTime);
            };

            video.addEventListener('pause', () => {
                updatePlayPauseIcon(true); 
                
                if (!video.ended) {
                    videoContainer.classList.add('rounded-xl', 'overflow-hidden', 'group');
                    showControls(); 
                } else {
                    hideControls();
                }
            });
            
            video.addEventListener('play', () => {
                updatePlayPauseIcon(false); 
                videoContainer.classList.remove('rounded-xl', 'overflow-hidden', 'group');
                hideControls(); 
            });

            // Initial state cleanup
            hideControls();
            updatePlayPauseIcon(true);
        }
    </script>

    <section class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-extrabold text-center text-neutral-dark mb-12 border-b-2 border-accent-primary pb-2 inline-block mx-auto">
            Latest Diary Entries
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            {featuredPosts.map((post) => (
                <PostCard post={post} />
            ))}
        </div>
        
        <div class="text-center mt-16">
            <a href="/blog/" class="text-xl font-medium border-b border-accent-link hover:text-accent-link/80 transition no-underline">
                View All Series and Chapters &rarr;
            </a>
        </div>
    </section>

    <section class="bg-neutral-light/50 max-w-7xl mx-auto my-16 p-8 rounded-xl shadow-inner border border-support-muted/20">
    
        <h2 class="text-3xl font-extrabold text-center text-neutral-dark mb-12 font-heading">
            ü§Ø Novi and Kernel Can't Agree. Where Should You Go First?
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

            <div class="mt-16 dark-layer relative p-6 pt-24 rounded-2xl border-4 border-accent-primary bg-neutral-light shadow-lg hover:shadow-2xl transition duration-500 transform hover:-translate-y-1">

                <div class="absolute -top-16 left-1/2 -translate-x-1/2 z-10 w-32 h-32 md:w-36 md:h-36 rounded-full bg-accent-primary shadow-md flex items-center justify-center">
                    <img 
                        src="/images/cast/novi-avatar.png"
                        alt="Novi's comic sketch avatar" 
                        class="w-full h-full object-contain drop-shadow-lg"
                    />
                </div>

                <div class="text-center mb-4">
                    <h3 class="text-xl font-extrabold text-accent-primary font-heading">
                        Novi's Directive: Check the Roster! üé≠
                    </h3>
                    <p class="text-neutral-dark/80 font-body mt-2">
                        "Don't waste time. Check out our <strong>Universe</strong>. Identify the key
                        collaborators and even <strong>antagonists</strong>. Jump straight to the <strong>Cast</strong>
                        page. Shall we?"
                    </p>
                </div>
                    
                <a href="/cast/" class="block text-center mt-6 px-6 py-3 bg-accent-primary text-neutral-light font-semibold rounded-lg hover:bg-accent-primary/90 transition no-underline">
                    ‚Üê Identify the Cast
                </a>
            </div>

            <div class="mt-16 dark-layer relative p-6 pt-24 rounded-2xl border-4 border-accent-secondary bg-neutral-light shadow-lg hover:shadow-2xl transition duration-500 transform hover:-translate-y-1">

                <div class="absolute -top-16 left-1/2 -translate-x-1/2 z-10 w-32 h-32 md:w-36 md:h-36 rounded-full bg-accent-secondary shadow-md flex items-center justify-center">
                    <img 
                        src="/images/cast/kernel-avatar.png"
